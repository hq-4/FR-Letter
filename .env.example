# Environment variables for FR-Letter pipeline

# PostgreSQL database connection
POSTGRES_HOST=your_postgres_host
POSTGRES_PORT=5432
POSTGRES_DB=fr_letter
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_VECTOR_TABLE=fr_embeddings
POSTGRES_ENTRIES_TABLE=fr_entries
POSTGRES_CRITERIA_TABLE=impact_criteria

# Ollama configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=bge-large

# DeepSeek configuration
DEEPSEEK_HOST=http://localhost:8000
DEEPSEEK_MODEL=deepseek-coder:1.5b

# Pipeline configuration
DAILY_SUMMARY_OUTPUT_DIR=summaries
MAX_DAILY_OPENROUTER_CALLS=5
PIPELINE_TIMEOUT_MINUTES=5
IMPACT_SCORE_THRESHOLD=0.7
SIMILARITY_THRESHOLD=0.8

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO
